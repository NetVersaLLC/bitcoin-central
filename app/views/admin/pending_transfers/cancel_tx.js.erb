ActiveScaffold.delete_record_row('<%=element_row_id(:action => 'list', :id => params[:id])%>', '<%=url_for(params_for(:action => :index, :id => nil, :page => [active_scaffold_config.list.user.page.to_i - 1, 1].max, :escape => false))%>');

$('body').html( $('body').html() + "<%= escape_javascript(render('modal', :user => @user, :record => @record )) %>");
$('#cancel_message_<%= dom_id(@user) %>').modal('show');

// to close modal when click send
$("#cancel_message_<%= dom_id(@user) %>  .modal-footer .btn" ).bind( "click", function() {
	$('#cancel_message_<%= dom_id(@user)%>').modal('hide');
	setTimeout(function(){$('#cancel_message_<%= dom_id(@user)%>').remove();}, 1000);
});

// to close modal when click X
$("#cancel_message_<%= dom_id(@user) %> .close" ).bind( "click", function() {
	$('#cancel_message_<%= dom_id(@user)%>').modal('hide');
	setTimeout(function(){$('#cancel_message_<%= dom_id(@user)%>').remove();}, 1000);
});

